<div class="container">
  <div class="row mt-3">
    <div class="col-md-9">
      <h4>Configuraciones</h4>
    </div>
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Buscar">
      <button class="btn btn-outline-success" type="submit">Buscar</button>
    </form>

    <table class="table table-bordered table-dark table-hover mt-3">
      <thead>
      <tr>
        <th>ID</th>
        <th>Descripcion</th>
        <th>Valor</th>
      </tr>
      </thead>

      <tbody>
      <%@settings.each do |config| %>
        <tr>
          <td><%= config.id %></td>
          <td><%= config.description %></td>
          <td><%= config.value %></td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </div>
</div>

