<div class="container">
  <div class="row mt-3">
    <div class="col-md-9">
      <h4>Proveedores</h4>
    </div>
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Buscar">
      <button class="btn btn-outline-success" type="submit">Buscar</button>
    </form>

    <table class="table table-bordered table-dark table-hover mt-3">
      <thead>
      <tr>
        <th>ID</th>
        <th>Documento</th>
        <th>ruc</th>
        <th>Razon Social</th>
        <th>email</th>
        <th>phone</th>
      </tr>
      </thead>

      <tbody>
        <%@providers.each do |config| %>
          <tr>
            <td><%= config.id %></td>
            <td><%= config.document %></td>
            <td><%= config.ruc %></td>
            <td><%= config.name %></td>
            <td><%= config.email %></td>
            <td><%= config.phone %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
